    <body>
      <%- include('partials/nav2') %>

      <main>
  <div class="page-wrapper">
    <div class="nivelC-container">
      <section class="main-content">
        <div class="reading-container"> 
          <h1 class="titulo-principal"><%= titulo %></h1>
          <p class="descripcion"><%= instrucciones %></p>
          <div id="ejercicio-interactivo" class="ejercicio-interactivo">
          </div>
        </div>
      </section>

      <aside id="stats-aside-actividad" class="nivelC-sidebar">
