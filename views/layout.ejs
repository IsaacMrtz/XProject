<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/resources/css/lay.css">
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
</head>

<body>
  <!-- Frame de video oculto -->
  <div id="videoFrame" style="display:none;">
    <video id="video" autoplay muted playsinline></video>
  </div>

  <main class="page-wrapper">
    <div class="layout-grid">
      
      <!-- SIDEBAR DE NAVEGACIÓN -->
      <%- include('partials/nav2') %> 

      <!-- CONTENIDO CENTRAL -->
      <section class="reading-container">
        <div class="reading-media">
          <img id="reading-img"
               src="<%= currentItem.imagen || '/resources/images/descarga.jpg' %>"
               alt="<%= currentItem.titulo %>">
        </div>

        <div id="completed">¡Completado!</div>

        <h2 id="itemTitle"><%= currentItem.titulo %></h2>
        <p id="itemText"><%= currentItem.texto %></p>

        <div id="controls" class="controls">
          <button id="btnSpeak" class="control-btn">🎤 Hablar</button>
          <button id="btnNext" class="control-btn" hidden>Siguiente →</button>
        </div>

        <div id="transcription" class="transcription-box">
          <em>Tu transcripción aparecerá aquí…</em>
        </div>
      </section>

      <!-- AVATAR FLOTANTE -->
      <div id="avatar-container" class="avatar-container" hidden>
        <img src="/resources/images/avat.png" alt="Avatar">
        <div id="avatar-bubble" class="avatar-bubble">
          ¡Hola! ¿Listo para leer?
        </div>
      </div>

      <!-- SIDEBAR DE ESTADÍSTICAS -->
      <aside class="stats-aside">
        <h3>Tu Progreso</h3>

        <div class="stat-card">
          🎯 Nivel: <span id="nivel-actual"><%= stats.nivelActual %></span>
        </div>

        <div class="stat-card">
          📚 Lecturas:<br>
          <span id="lecturas-leidas"><%= stats.lecturasLeidas %></span> /
          <span id="total-lecturas"><%= stats.totalLecturas %></span>
          <div class="progress-bar">
            <div id="lecturas-bar"
                 style="width: <%= (stats.lecturasLeidas / stats.totalLecturas) * 100 %>%">
            </div>
          </div>
        </div>

        <div class="stat-card">
          🎮 Juegos: <span id="juegos-jugados"><%= stats.juegosJugados %></span>
        </div>

        <div class="stat-card">
          🚀 Desafíos: <span id="desafios-activos"><%= stats.desafiosActivos %></span>
        </div>

        <div class="stat-card">
          ⭐ Dificultad: 
          <span style="color: var(--color-accent);">
            <%= currentItem.dificultad || 'Media' %>
          </span>
        </div>

        <div class="stat-card">
          💯 Puntos: <span id="points-total">0</span>
        </div>

        <button id="btnBack" class="btn-back">← Regresar</button>
      </aside>
    </div>
  </main>

  <!-- Inyección de datos dinámicos -->
  <script>
    window.appParams   = { grado: "<%= grado %>", id: "<%= id %>" };
    window.appStats    = <%- JSON.stringify(stats) %>;
    window.currentItem = <%- JSON.stringify(currentItem) %>;
  </script>

  <!-- Librerías y módulos -->
  <script src="/resources/jsFace-Api/face-api.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@mediapipe/pose/pose.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.js"></script>

  <!-- Scripts personalizados -->
  <script type="module" src="/scripts/orques2.js"></script>
  <script type="module" src="/scripts/uiRender.js"></script>

  <!-- Funcionalidad básica -->
  <script>
    document.getElementById('btnSpeak')?.addEventListener('click', () => {
      console.log('Función de hablar activada');
    });

    document.getElementById('btnNext')?.addEventListener('click', () => {
      console.log('Siguiente lectura');
    });

    document.getElementById('btnBack')?.addEventListener('click', () => {
      window.history.back();
    });
  </script>
</body>
</html>
