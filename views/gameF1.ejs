<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= data.titulo %></title>
  <link rel="stylesheet" href="/resources/css/games.css">
</head>

<body class="<%= tipo %>" style="background: #778da9;">

  <!-- 🔹 Botón hamburguesa para móvil -->
  <button class="mobile-menu-btn" onclick="toggleMobileMenu()">☰</button>

  <!-- 🔹 Menú lateral -->
  <div id="menu-lateral" class="menu-lateral">
    <button class="toggle-btn" onclick="toggleSidebar()">◀</button>
    
    <div class="menu-header">
      <span class="menu-icon">🎮</span>
      <span class="menu-title">Menú de Juegos</span>
    </div>

    <button class="menu-item btn-reiniciar" onclick="reiniciarJuego()">
      <span class="menu-item-icon">🔄</span>
      <span class="menu-item-text">Reiniciar</span>
    </button>

    <a href="/game?grado=primer&tipo=crearPalabras" class="menu-item btn-palabras">
      <span class="menu-item-icon">🔤</span>
      <span class="menu-item-text">Juego de Palabras</span>
    </a>

    <a href="/game?grado=primer&tipo=crearImagenes" class="menu-item btn-imagenes">
      <span class="menu-item-icon">🖼️</span>
      <span class="menu-item-text">Juego de Imágenes</span>
    </a>

    <div class="menu-spacer"></div>

    <div class="stat-card puntaje" id="puntaje">
      <span class="menu-item-text">Puntaje: 0</span>
      <span class="menu-item-icon" style="display: none;">🎯</span>
    </div>

    <div class="stat-card nivel" id="nivel">
      <span class="menu-item-text">Nivel 1</span>
      <span class="menu-item-icon" style="display: none;">⭐</span>
    </div>
  </div>

  <!-- 🔹 Contenido principal -->
  <div class="main-content">
    <div class="titulo-caja">
      <h1><%= data.titulo %></h1>
      <p class="descripcion"><%= data.descripcion %></p>
    </div>

    <div class="juego">
      <div id="imagen" class="imagen"></div>
      <div id="slots" class="slots"></div> <!-- usado solo por juego.js -->
      <div id="letras" class="letras"></div>
      <div id="estado" class="estado"></div>
      <button id="btnSiguiente" class="btn-siguiente oculto" onclick="siguiente()">Siguiente →</button>
    </div>
  </div>

  <!-- 🔹 Script del juego dinámico -->
  <script src="/scripts/<%= script %>"></script>

  <!-- 🔹 Script auxiliar para el menú lateral -->
  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('menu-lateral');
      sidebar.classList.toggle('collapsed');
    }

    function toggleMobileMenu() {
      const sidebar = document.getElementById('menu-lateral');
      sidebar.classList.toggle('visible');
    }
  </script>
</body>
</html>
